@{
    Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Author>;
<div class="container card">
<h1>Authors</h1>
<form>
    <i class="glyphicon glyphicon-search"></i><input type="text" name="AuthorSearch" placeholder="search and press enter"><br><br>
</form>

@if (@Model.Count == 0)
{
  <h3>No authors have been added to library database</h3>
}

@foreach(Author author in Model)
{
  <li>@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</li>
}

<br><p>@Html.ActionLink("See All Authors", "Index")</p>
<input class="btn btn-info" type="button" value="Delete All Authors" onclick='location.href="@Url.Action("DeleteAll")";' /><br>
<br><p>@Html.ActionLink("Add new author", "Create")</p>
<br><p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>