@{
  Layout = "_Layout";
}

@using Library.Models;
@using System.Security.Claims
@model IEnumerable<Library.Models.Book>
<div class="container card">
<h2>Books for @User.Identity.Name</h2>
<form>
    <i class="glyphicon glyphicon-search"></i><input type="text" name="BookSearch" placeholder="search and press enter">
</form>

@if (Model.Any())
{
  <ul>
    @foreach (Book book in Model)
    {
      <br><li>@Html.ActionLink($"{book.BookName}", "Details", new { id = book.BookId })</li>
    }
  </ul>  
}
else
{
  <h3>No books have been added.</h3>
}
<p>@Html.ActionLink("Add new book", "Create")</p>
<input class="btn btn-info" type="button" value="Delete All Books" onclick='location.href="@Url.Action("DeleteAll")";' /><br>
<br><p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>