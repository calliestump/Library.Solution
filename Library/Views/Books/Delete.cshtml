@{
  Layout = "_Layout";
}

@model Library.Models.Book
<div class="container card">
    <h1>Delete This Book?</h1>

    @Html.DisplayFor(model => model.BookName)
    @using (Html.BeginForm())
    {
        <input class="btn btn-warning" type="submit" value="Delete" />
    }
    <input class="btn btn-info" type="button" value="Books" onclick='location.href="@Url.Action("Index")";' />
    <input class="btn btn-info" type="button" value="Home" onclick='location.href="@Url.Action("Index", "Home")";' />
</div>